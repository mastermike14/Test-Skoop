
<div class="twitter_container">
<% for status in @status %>
<div class="twitter_status">
<%= image_tag(status.user.profile_image_url, :class => 'twitter_image') %>
<%= link_to (status.user.screen_name), ("http://twitter.com/#{status.user.screen_name}") %>
<%= status.text %><br />
<div class="twitter_posted_at" ><strong>Posted On: </strong><%= (status.created_at) %></div>
<% if @user.present? %>

<% else %>

<% end %>
</div>
<% end %>
</div>
<% if @status.length < 1 %>
<p>There are no tweets to display.</p>
<% end %>
